<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:padding="10dp"
    android:background="@color/primaryLightColor"

    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        android:elevation="10dp"
        android:padding="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="Name"
                    />
                <TextView
                    android:id="@+id/list_view_card_name"
                    android:layout_width="230dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/primaryDarkColor"
                    android:textAlignment="center"
                    android:textSize="14dp"
                    android:layout_marginRight="5dp"
                    android:padding="3dp"
                    android:background="@drawable/edittextstyle"/>

                <TextView
                    android:id="@+id/list_view_card_delete"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_delete_forever_black_24dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="No.of Bills"
                    />
                <TextView
                    android:id="@+id/list_view_card_bill_count"
                    android:layout_width="60dp"
                    android:layout_marginLeft="5dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/primaryDarkColor"
                    android:textAlignment="center"
                    android:textSize="14dp"
                    android:padding="3dp"
                    android:background="@drawable/edittextstyle"/>

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="Amount"
                    />
                <TextView
                    android:id="@+id/list_view_card_amount"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:textSize="14dp"
                    android:textColor="@color/primaryDarkColor"
                    android:padding="3dp"
                    android:background="@drawable/edittextstyle"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="To be Paid"
                    />
                <TextView
                    android:id="@+id/list_view_card_amount_pending"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:textSize="14dp"
                    android:padding="3dp"
                    android:textColor="@color/primaryDarkColor"
                    android:background="@drawable/edittextstyle"/>


                <TextView
                    android:id="@+id/list_view_card_edit"
                    android:layout_marginLeft="30dp"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/ic_edit_black_24dp"/>
            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>